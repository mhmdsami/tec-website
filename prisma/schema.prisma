// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma-app/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid()) @map("_id")
  email        String    @unique
  name         String
  passwordHash String
  isAdmin      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  Business     Business?
}

model Business {
  id        String @id @default(uuid()) @map("_id")
  name      String
  tagline   String
  about     String
  location  String
  instagram String
  whatsApp  String
  email     String
  phone     String

  isVerified Boolean @default(false)

  type   BusinessType @relation(fields: [typeId], references: [id])
  typeId String

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String @unique

  createdAt DateTime @default(now())
}

model BusinessType {
  id   String @id @default(uuid()) @map("_id")
  name String
  slug String @unique

  Business Business[]
}
